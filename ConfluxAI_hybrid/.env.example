# ConfluxAI Multi-Modal Search Agent Configuration
# Copy this file to .env and modify as needed

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# File Handling
MAX_FILE_SIZE=50  # MB
UPLOAD_DIR=uploads
INDEX_DIR=indexes

# Vector Database Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DIM=384
INDEX_NAME=conflux_index

# Search Settings
DEFAULT_SEARCH_LIMIT=10
DEFAULT_SIMILARITY_THRESHOLD=0.7

# Text Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Image Processing
IMAGE_ANALYSIS_MODEL=clip-ViT-B-32

# Database
DATABASE_URL=sqlite:///conflux_metadata.db

# API Keys (optional)
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=

# Logging
LOG_LEVEL=INFO
